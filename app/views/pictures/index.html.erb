<section id="main">
  <% if @pictures.any? %>
    <% @pictures.each do |picture| %>
      <h2><%= link_to picture.name, picture_path(picture) %></h2>
        <ul>
          <li><%= link_to "Edit #{picture.name}", edit_picture_path(picture) %></li>
          <li><%= link_to "Delete #{picture.name}", picture_path(picture), method: :delete %></li>
          <li><%= link_to "Comment #{picture.name}", new_picture_comment_path(picture) %></li>
        </ul>
    <% end %>
  <% else %>
  <p>No pictures have been added yet</p>
  <% end %>
  <br/>
  <a class="addpic" href="pictures/new">Add a picture</a>


</section>
